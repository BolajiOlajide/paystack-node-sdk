{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2017"],
    "module": "commonjs",
    "types": ["jest", "node"],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
